@using System.Security.Claims
@model SharedModels.User

@{
    ViewData["Title"] = "Yeni ürün";
    Layout = "_Layout";
}

@if (!@User.HasClaim(ClaimTypes.Role, "Administrator"))
{
    <h1>403 Forbidden!</h1>
    <h4 class="alert alert-danger">Bu alana erişim yetkiniz yok!</h4>
    return;
}

<div class="container">
    <h4>Kullanıcıyı düzenle</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form class="form-group" asp-controller="AdminPanel" asp-action="users/edit" method="post">
                <input class="form-control" type="hidden" name="Id" id="Id" value="@Model.Id"/>
                <div>
                    <div class="form-group">
                        <label for="Email">Email:</label>
                        <input class="form-control" type="text" name="Email" id="Email" value="@Model.Email"/>
                    </div>
                    <div class="form-group">
                        <label for="Password">Password:</label>
                        <input class="form-control" type="text" name="Password" id="Password" value="@Model.Password"/>
                    </div>
                    <div class="form-group">
                        <label for="FirstName">FirstName:</label>
                        <input class="form-control" type="text" name="FirstName" id="FirstName" value="@Model.FirstName"/>
                    </div>
                    <div class="form-group">
                        <label for="LastName">LastName:</label>
                        <input class="form-control" type="text" name="LastName" id="LastName" value="@Model.LastName"/>
                    </div>
                    <div class="form-group">
                        <label for="PhoneNumber">PhoneNumber:</label>
                        <input class="form-control" type="text" name="PhoneNumber" id="PhoneNumber" value="@Model.PhoneNumber"/>
                    </div>
                    <div class="form-group">
                        <label for="Tc">TC:</label>
                        <input class="form-control" type="text" name="Tc" id="Tc" value="@Model.Tc"/>
                    </div>

                    <div class="form-group mt-2">
                        <button type="submit" class="btn btn-warning form-control"><i class="fas fa-check text-black-50"></i> Kaydet</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Users"><i class="fas fa-angle-double-left"></i>  Users tablosuna dön</a>
    </div>
</div>


