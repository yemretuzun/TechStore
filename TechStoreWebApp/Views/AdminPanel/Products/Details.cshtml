@using System.Security.Claims
@model SharedModels.Product

@{
    ViewData["Title"] = "Ürün detayı";
    Layout = "_Layout";
}

@if (!@User.HasClaim(ClaimTypes.Role, "Administrator"))
{
    <h1>403 Forbidden!</h1>
    <h4 class="alert alert-danger">Bu alana erişim yetkiniz yok!</h4>
    return;
}

<div class="container">
    <form>
        <div class="form-group card">
            <label class="card-header">Görseller</label>
            <div class="card-img overflow-auto" readonly>
                <div style="max-height: 200px;">
                    @foreach (var imageSrc in @Model.Images)
                    {
                        <div class="d-inline-block ">
                            <img src="@imageSrc" style="max-height: 200px" alt="">
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="infoDiv">
            <div class="form-group">
                <label>ProductID</label>
                <input class="form-control" type="text" value="@Model.Id" readonly />
            </div>
            <div class="form-group">
                <label>Title</label>
                <input class="form-control" type="text" value="@Model.Title" id="Title" name="Title" readonly />
            </div>
            <div class="form-group">
                <label>Description</label>
                <input class="form-control" type="text" value="@Model.Description" id="Description" name="Description" readonly />
            </div>
            <div class="form-group">
                <label>Stock</label>
                <input class="form-control" type="text" value="@Model.Stock" id="Stock" name="Stock" readonly />
            </div>
            <div class="form-group">
                <label>Price</label>
                <input class="form-control" type="text" value="@Model.Price" id="Price" name="Price" readonly />
            </div>
            <div class="form-group">
                <label>Tax</label>
                <input class="form-control" type="text" value="@Model.Tax" id="Tax" name="Tax" readonly />
            </div>
            <div class="form-group">
                <label>Discount</label>
                <input class="form-control" type="text" value="@Model.Discount" id="Discount" name="Discount" readonly />
            </div>
            <div class="form-group">
                <label>Ratings</label>
                <input class="form-control" type="text" value="@Model.Ratings" id="Ratings" name="Ratings" readonly />
            </div>
        </div>
    </form>
</div>

