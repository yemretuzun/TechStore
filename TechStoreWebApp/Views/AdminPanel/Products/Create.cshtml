@using System.Security.Claims
@model TechStoreWebApp.Models.ViewModels.Admin.ProductsViewModel

@{
    ViewData["Title"] = "Yeni ürün";
    Layout = "_Layout";
}

@if (!@User.HasClaim(ClaimTypes.Role, "Administrator"))
{
    <h1>403 Forbidden!</h1>
    <h4 class="alert alert-danger">Bu alana erişim yetkiniz yok!</h4>
    return;
}

<div class="container">
    <h4>Yeni ürün oluştur</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form class="form-group" asp-controller="AdminPanel" asp-action="products/create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div>
                    <div class="form-group">
                        <label for="Title">Title:</label>
                        <input class="form-control" type="text" name="Title" id="Title" placeholder="Ürün adı" />
                    </div>
                    <div class="form-group">
                        <label for="Price">Fiyat:</label>
                        <input class="form-control" type="text" name="Price" id="Price" placeholder="0,0 TL" />
                    </div>
                    <div class="form-group">
                        <label>Görseller:</label>
                        <input class="form-control" type="text" id="Image" name="Images" placeholder="Url"
                               multiple aria-multiselectable="true" />
                        @*<input class="form-control" type="file" id="Images" name="Images" multiple aria-multiselectable="true"/>*@
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary form-control">Kaydet</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Products">Products tablosuna dön</a>
    </div>
</div>


