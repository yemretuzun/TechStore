@using System.Security.Claims
@model  SharedModels.Brand


@{
    ViewData["Title"] = "Marka detayı";
    Layout = "_Layout";
}

@if (!@User.HasClaim(ClaimTypes.Role, "Administrator"))
{
    <h1>403 Forbidden!</h1>
    <h4 class="alert alert-danger">Bu alana erişim yetkiniz yok!</h4>
    return;
}

<div class="container">
    <form>
        <div class="form-group p-2 bg-dark text-warning">
            <label>Logo: </label>
            <img src="@Model.LogoImage" style="max-width: 250px; max-height: 250px" class="d-block"/>
        </div>
        <div class="form-group p-2 bg-dark text-warning">
            <label class="d-inline-flex">BrandID: </label>
            <input class="form-control-plaintext text-light" type="text" value="@Model.Id" readonly />
        </div>
        <div class="form-group p-2 bg-dark text-warning">
            <label class="d-inline-block">Name: </label>
            <input class="form-control-plaintext text-light" type="text" value="@Model.Name" id="Name" name="Name" readonly />
        </div>
    </form>
</div>
